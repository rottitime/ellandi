{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "prettier.prettierPath": "node_modules/prettier",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.exclude": {
    "web/*.tsbuildinfo": true,
    "web/.editorconfig": true,
    "web/.eslintcache": true,
    "web/.eslintignore": true,
    "web/.eslintrc.cjs": true,
    "web/.github": true,
    "web/.husky": true,
    "web/.keystone": true,
    "web/.lintstagedrc.cjs": true,
    "web/.prettierignore": true,
    "web/.prettierrc.cjs": true,
    "web/.scripts": true,
    "web/.stylelintrc.json": true,
    "web/dist": true,
    "web/keystone.db": true,
    "web/node_modules": true,
    "web/package-lock.json": true,
    "web/postcss.config.cjs": true,
    "web/schema.graphql": true,
    "web/schema.prisma": true,
    "web/tsconfig.json": true,
    // "web/vite.config.ts": true,
    "web/src/vite-env.d.ts": true
  }
}
